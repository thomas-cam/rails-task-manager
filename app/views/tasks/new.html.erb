<h1>Create a New Task</h1>

<%= form_with(model: @task) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>
  <div>
    <%= form.submit 'Create Task' %>
  </div>
  <%= link_to "Back to list", tasks_path %>
<% end %>
